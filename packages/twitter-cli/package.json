{
  "name": "@neonwatty/twitter-cli",
  "version": "1.0.0",
  "description": "CLI tool for posting tweets and managing content on X/Twitter via API v2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "twitter": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "knip": "knip",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "twitter",
    "x",
    "cli",
    "api",
    "tweet",
    "social-media"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neonwatty/social-starter-pack.git",
    "directory": "packages/twitter-cli"
  },
  "bugs": {
    "url": "https://github.com/neonwatty/social-starter-pack/issues"
  },
  "homepage": "https://github.com/neonwatty/social-starter-pack/tree/main/packages/twitter-cli#readme",
  "dependencies": {
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/node": "^22.10.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "knip": "^5.38.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "vitest": "^2.1.8"
  }
}
