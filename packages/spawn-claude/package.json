{
  "name": "@neonwatty/spawn-claude",
  "version": "1.0.0",
  "description": "Spawn Claude Code instances in new Ghostty terminals (windows, tabs, splits)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "spawn-claude": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "knip": "knip",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run build && npm test"
  },
  "keywords": [
    "cli",
    "claude",
    "ghostty",
    "terminal",
    "spawn",
    "ai",
    "automation"
  ],
  "author": "neonwatty",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neonwatty/social-starter-pack.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "knip": "^5.38.0",
    "prettier": "^3.4.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "commander": "^12.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
